{
    "name": "yceruto/ddd-bundle",
    "description": "DDD (Domain-Driven Design) building blocks for Symfony framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yonel Ceruto",
            "email": "yonelceruto@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "yceruto/ddd": "dev-main",
        "symfony/http-kernel": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "yceruto/messenger": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Yceruto\\DddBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yceruto\\DddBundle\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
